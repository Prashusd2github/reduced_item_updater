doctype html
html
  head
    title Reducer Item Updater
  body
    include menu 
    table
      thead
        tr
          th Item Name
          th Actual Price
          th Reduced Price
          th Discount

      tbody
        each item in data
          tr(style="cursor: pointer;", onclick=`redirectToStoreDetails(${item.item_id})`)
            td= item.item_name
            td= item.actual_price
            td= item.reduce_price
            td= item.discount

    script.
      function redirectToStoreDetails(item_id) {
        window.location.href = "/item_details/" + item_id;
      }
