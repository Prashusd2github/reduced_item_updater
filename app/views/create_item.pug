doctype html
html
  head
    title Create Item
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    style.
      body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        margin: 20px;
      }
      h1 {
        color: #007bff;
        text-align: center;
        margin-bottom: 30px;
      }
      form {
        max-width: 400px;
        margin: 0 auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #555;
      }
      input, select {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }
      input[type='submit'] {
        background-color: #28a745;
        color: #fff;
        cursor: pointer;
      }
      input[type='submit']:hover {
        background-color: #218838;
      }
      .success-message {
        color: #28a745;
        text-align: center;
        margin-top: 10px;
      }
      .error-message {
        color: #dc3545;
        text-align: center;
        margin-top: 10px;
      }

  body
    include menu
    h1 Create Item
    form(action='/create-item' method='POST')
      label(for='item_name') Item Name:
      input(name='item_name' type='text' required)
      label(for='actual_price') Actual Price:
      input(name='actual_price' type='number' step='0.01' required)
      label(for='reduce_price') Reduced Price:
      input(name='reduce_price' type='number' step='0.01' required)
      label(for='discount') Discount:
      input(name='discount' type='number' step='0.01' required)
      label(for='store_id') Store:
      select(name='store_id' required)
        if stores
          each store in stores
            option(value=store.store_id)= store.store_name
      label(for='items_available') Items Available:
      input(name='items_available' type='number' required)
      input(type='submit' value='Create Item')
    
    if (successMessage)
      p.success-message= successMessage
    if (errorMessage)
      p.error-message= errorMessage
